<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/imgActionOrderPlaced"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/action_order_placed"
            android:layout_centerInParent="true"/>

        <TextView android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="@string/order_placed"
            android:layout_below="@+id/imgActionOrderPlaced"
            android:textAlignment="center"/>

        <Button
            android:textColor="@android:color/white"
            android:id="@+id/btnOk"
            android:background="@drawable/cart_button_background"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:text="Ok"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>