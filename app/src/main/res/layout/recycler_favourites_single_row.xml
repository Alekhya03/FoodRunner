<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:background="#ffffff"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:id="@+id/llContent">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="1.3"
            android:id="@+id/restaurantImage"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.6"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pind Tadka"
                android:textSize="17sp"
                android:id="@+id/restaurantNameView"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/pricePerPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/restaurantNameView"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_action_rupee"
                android:padding="4dp"
                android:text="300/person"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">


            <TextView
                android:id="@+id/viewFavourite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:tag="unliked"
                android:background="@drawable/ic_action_favourites" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:text="4.5"
                android:textStyle="bold"
                android:textColor="#ff9106"
                android:drawablePadding="4dp"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/viewFavourite"
                android:id="@+id/textViewRating" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>